<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.liveticket.ScannerActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/innerLayout"
        android:layout_height="50dp">
        <Button
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="@string/scanner_button_text"
            android:id="@+id/btnInput"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/manual_scan_button"/>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/scanner_text_view"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <FrameLayout
        android:id="@+id/previewFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/innerLayout"></FrameLayout>

</RelativeLayout>
